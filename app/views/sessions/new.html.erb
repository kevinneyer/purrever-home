<h1>LOGIN Page</h1>

<% if flash[:error] %>
<h5 style='color: red;'><%= flash[:error] %></h5>
<% end %>

<%= form_for :session, url: login_path do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit %>
<% end %>