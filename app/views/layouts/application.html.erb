<!DOCTYPE html>

<html>
  <head>
    <title>PurrEverHome</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href= "./application.css"/>
    <link rel="stylesheet" href= "./welcome.scss"/>
    <link rel="stylesheet" href= "./welcome.scss"/>
    <link rel="stylesheet" href= "./adoption_centers.scss"/>
  </head>

  <body>
    
  

     <div id="navbar"> 
      <ul>
        <li><%= link_to 'All Listings', listings_path %></li>
        <li><%= link_to "Create a New Listing!", flow_path %></li>
        <li><%= link_to 'All Adoption Centers', adoption_centers_path %></li>
        
        
          <%# <li class='right'><%= link_to "Sign-up", new_user_path %>
          <%# <li class='right'> <%= link_to "Login", new_login_path %>

          <% if @current_user %>
          <li class='right'> Welcome <%=  @current_user.username %></li>                    
          <li class='right'><%= link_to "Log-Out", logout_path, method: :delete %></li>
        <% else %>
          <li class='right'><%= link_to 'Sign-up', new_user_path %></li>
          <li class='right'><%= link_to 'Login', new_login_path %></li>
        <% end %>
      </ul>
    </div> 


    
    <%= yield %>
  </body>
</html>
